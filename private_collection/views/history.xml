<odoo>
    <data>
        <record model="ir.ui.view" id="private_collection_history_form">
            <field name="name">private_collection_history form</field>
            <field name="model">private_collection.history</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="check_date"/>
                                <field name="scratch_1"/>
                                <field name="crease_1"/>
                                <field name="desperation_1"/>
                                <field name="gouge_1"/>
                                <field name="break_1"/>
                                <field name="peeling_off_1"/>
                            </group>
                            <group>
                                <field name="image" widget="image"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>